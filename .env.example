# Database
DATABASE_URL="postgresql://user:password@localhost:5432/nammes_db"
# For local development with SQLite:
# DATABASE_URL="file:./dev.db"

# App
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
SESSION_SECRET="your-session-secret-change-in-production"

# Email (Simulated - use Ethereal for prototype)
SMTP_HOST="smtp.ethereal.email"
SMTP_PORT=587
SMTP_USER="your-ethereal-email@ethereal.email"
SMTP_PASS="your-ethereal-password"
SMTP_FROM="noreply@nammes.org"

# File Storage
# For local development:
STORAGE_TYPE="local"
STORAGE_PATH="./uploads"
# For S3-compatible storage:
# STORAGE_TYPE="s3"
# S3_BUCKET="nammes-certificates"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY_ID="your-access-key"
# S3_SECRET_ACCESS_KEY="your-secret-key"
# S3_ENDPOINT="https://s3.amazonaws.com" # or DigitalOcean Spaces endpoint

# Certificate Settings
CERTIFICATE_SIGNED_URL_EXPIRY_HOURS=48
CERTIFICATE_ID_PREFIX="NAMMES"

# Payment (Mock for prototype)
PAYMENT_PROVIDER="mock"
PAYMENT_WEBHOOK_SECRET="mock-webhook-secret-change-in-production"
PAYMENT_AMOUNT=5000 # in kobo/cents
PAYMENT_CURRENCY="NGN"

# Admin
ADMIN_EMAIL="admin@nammes.org"
ADMIN_DEFAULT_PASSWORD="ChangeMe123!" # Only for initial setup

# Google Maps (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
